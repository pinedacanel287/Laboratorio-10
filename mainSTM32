/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(SD_SS_GPIO_Port, SD_SS_Pin, GPIO_PIN_SET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : int_Pin */
  GPIO_InitStruct.Pin = int_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(int_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : SD_SS_Pin */
  GPIO_InitStruct.Pin = SD_SS_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_MEDIUM;
  HAL_GPIO_Init(SD_SS_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI9_5_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI9_5_IRQn);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	t_boton = HAL_GetTick();
	if (t_boton - ultimo_t_boton >= 250) {
		if (HAL_GPIO_ReadPin(int_GPIO_Port, int_Pin) == GPIO_PIN_RESET) {
			guardar = 1;
		}
	}
}

void floatToFixedString(float number, char* buffer) {
    // Redondear a dos decimales
    number += 0.005;

    // Obtener la parte entera
    int integerPart = (int)number;

    // Obtener la parte decimal
    int fractionalPart = (int)((number - integerPart) * 100); // Multiplicar por 100

    // Manejar la parte entera
    int index = 0;
    if (integerPart == 0) {
        buffer[index++] = '0';
    } else {
        int temp = integerPart;
        int digits[10];
        int digitCount = 0;

        // Extraer dígitos de la parte entera
        while (temp > 0) {
            digits[digitCount++] = temp % 10;
            temp /= 10;
        }

        // Agregar los dígitos en orden correcto
        for (int i = digitCount - 1; i >= 0; i--) {
            buffer[index++] = digits[i] + '0';
        }
    }

    // Agregar el punto decimal
    buffer[index++] = '.';

    // Manejar la parte decimal
    if (fractionalPart < 10) {
        buffer[index++] = '0';  // Agregar cero si es necesario
    }

    // Agregar dígitos de la parte decimal
    buffer[index++] = (fractionalPart % 10) + '0';
    fractionalPart /= 10;
    buffer[index++] = (fractionalPart % 10) + '0';

    buffer[index] = '\0';  // Finalizar la cadena
}
/* USER CODE END 4 */

